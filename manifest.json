{
  "name": "[Youtube -> Piped] redirect",
  "description": "Redirects (some of) youtube links to piped.video",
  "version": "0.0.3",

  "background": {
    "scripts": ["js.js"]
  },
  "icons": {
    "48": "icon.jpeg"
  },

  "browser_action": {
    "default_icon": "icon.jpeg",
    "default_title": "Piped Redirect"
  },

  "background": {
    "scripts": ["js.js"]
  },

  "permissions": [
    "*://www.youtube.com/*",
    "webRequest",
    "webRequestBlocking"
  ],

  "manifest_version": 2
}
